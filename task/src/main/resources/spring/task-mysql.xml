<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <import resource="classpath*:spring/base-mysql.xml"/>

    <bean id="taskDataSource" parent="baseDataSourceConfig">
        <property name="driverClassName" value="${task.jdbc.driver}"/>
        <property name="url" value="${task.jdbc.url}"/>
        <property name="username" value="${task.jdbc.taskname}"/>
        <property name="password" value="${task.jdbc.password}"/>
    </bean>

</beans>