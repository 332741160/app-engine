<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd"
       default-lazy-init="true">

    <context:property-placeholder location="classpath*:dataSource.properties" ignore-unresolvable="true"/>

    <bean class="com.junesix.frame.filters.AuthResourceFilter">
        <property name="synchronizeOnSession" value="true"/>
        <property name="customArgumentResolvers">
            <list>
                <bean class="com.junesix.frame.spring.context.RequestContextMethodArgumentResolver"/>
            </list>
        </property>
        <property name="responseBodyAdvice">
            <list>
                <bean class="com.junesix.frame.spring.JsonResultValueHandler"/>
            </list>
        </property>
        <property name="messageConverters">
            <list>
                <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter"/>
                <bean class="org.springframework.http.converter.StringHttpMessageConverter"/>
                <bean class="org.springframework.http.converter.ResourceHttpMessageConverter"/>
            </list>
        </property>
    </bean>

    <import resource="classpath*:spring/*.xml"/>

    <context:component-scan base-package="com.junesix"/>

</beans>